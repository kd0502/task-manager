{% extends 'base.html.twig' %}
{% block title %}Users{% endblock %}
{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">Users</h1>
        <a class="btn btn-primary" href="{{ path('admin_users_new') }}">New User</a>
    </div>

    <table class="table table-striped">
        <thead><tr><th>ID</th><th>Name</th><th>Email</th><th></th></tr></thead>
        <tbody>
        {% for u in users %}
            <tr>
                <td>{{ u.id }}</td>
                <td>{{ u.name }}</td>
                <td>{{ u.email }}</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('admin_users_edit', {id:u.id}) }}">Edit</a>
                    <form class="d-inline" method="post" action="{{ path('admin_users_delete', {id:u.id}) }}" onsubmit="return confirm('Delete user?')">
                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                    <a class="btn btn-sm btn-outline-primary" href="{{ path('admin_tasks_new', {user:u.id}) }}">Add Task</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
